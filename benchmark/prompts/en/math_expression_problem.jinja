{% if ProblemType.RESPONSE in Problem.problem_types %}
{% set instruction = "Please evaluate the following mathematical expression. Respond only with the numerical value." %}
{% include "response_problem.jinja" with context %}
{% elif ProblemType.MULTIPLE_CHOICE in Problem.problem_types %}
{% if ProblemType.SOLVE_EXPRESSION in Problem.problem_types %}
{% set instruction = "Select the choice that correctly evaluates the mathematical expression " ~ Problem.problem ~ ". Respond only with the label corresponding to your choice." %}
{% elif ProblemType.CHOOSE_MATCHING_EXPRESSION in Problem.problem_types %}
{% set instruction = "Select the option that evaluates to " ~ Problem._answer ~ ". Respond only with the label corresponding to your choice." %}
{% endif %}
{% include "multiple_choice_problem.jinja" with context %}
{% endif %}